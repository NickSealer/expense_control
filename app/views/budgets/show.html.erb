<div class="card-deck card-custom">
  <div class="card border-info mb-3">
    <div class="card-header card-title text-info">
      <h4>
        <strong>Budget <%= @budget.id %></strong>
      </h4>
    </div>
    <div class="card-body text-info">
      <li class="list-group-item">
        <strong>Dynamic cash flow:
        </strong><%= @budget.enable_dynamic_cash_flow %>
      </li>
      <li class="list-group-item">
        <strong>From:
        </strong><%= @budget.from_date %>
      </li>
      <li class="list-group-item">
        <strong>To:
        </strong><%= @budget.to_date %>
      </li>
    </div>
    <div class="card-body">
    <h5>Revenues</h5>
    <table class="table table-hover table-responsive-xl display" id="revenue-table">
      <thead>
        <tr>
          <th>Value</th>
          <th>Concept</th>
          <th>Type</th>
        </tr>
      </thead>
      <tbody>
        <% @revenues.each do |revenue| %>
        <tr>
          <td><%= number_to_currency(revenue.value) %></td>
          <td><%= revenue.concept %></td>
          <td><%= revenue.category %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <h5>Charges</h5>
    <table class="table table-hover table-responsive-xl display" id="charges-table">
      <thead>
        <tr>
          <th>Value</th>
          <th>Concept</th>
          <th>Type</th>
        </tr>
      </thead>
      <tbody>
        <% @charges.each do |charge| %>
        <tr>
          <td><%= number_to_currency(charge.value) %></td>
          <td><%= charge.concept %></td>
          <td><%= charge.category %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <div class="card-footer">
      <%= link_to edit_budget_path(@budget), class: 'btn btn-outline-primary float-left', title:"Update budget #{@budget.id}" do %>
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
      <% end %>
      <%= link_to budgets_path, class: 'btn btn-outline-dark float-right', title:"Back" do %>
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
</div>
