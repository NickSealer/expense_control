<div class="card text-center border-info mb-3">
  <div class="card-header card-title text-info">
    <h1>Budgets</h1>
    <div class="float-right">
      <%= link_to new_budget_path, class: 'btn btn-outline-success float-right', title:"New Budget" do %>
        <i class="fa fa-plus-circle" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-hover table-responsive-xl display" id="budget-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Dynamic cash flow</th>
          <th>From</th>
          <th>To</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @budgets.each do |budget| %>
        <tr>
          <td><%= budget.id %></td>
          <td><%= budget.enable_dynamic_cash_flow %></td>
          <td><%= budget.from_date %></td>
          <td><%= budget.to_date %></td>
          <td>
            <button type="button" title="Show budget <%= budget.id %>" class="btn btn-outline-info" data-toggle="modal" data-target="#modal<%= budget.id %>">
              <i class="fa fa-info-circle" aria-hidden="true"></i>
            </button>
            <%= render "budgets_modal", budget: budget %>
            <%= link_to edit_budget_path(budget), class: 'btn btn-outline-primary', title:"Update budget #{budget.id}" do %>
              <i class="fa fa-pencil-square-o"></i>
            <% end %>
            <button type="button" name="Delete budget <%= budget.id %>" class="btn btn-outline-danger" data-toggle="modal" data-target="#delete_modal<%= budget.id %>">
              <i class="fa fa-trash-o"></i>
            </button>
            <%= render "budgets_delete_modal", budget: budget %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
  <div class="card-footer"></div>
</div>
