<div class="form-title text-center text-info divider" style="margin-top: 0px;">
  <h2>Year <%= params[:year] %> </h2>
</div>
<div class="row center-row">
  <% @expenses.each do |expense| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 text-center">
      <div class="card border-info mb-3">
        <div class="card-header text-info"><strong><%= expense.date %></strong></div>
        <div class="card-body text-info">
          <h5 class="card-title"><%= link_to number_to_currency(expense.value), expense, class: 'btn btn-outline-info' %></h5>
          <p class="card-text"><%= expense.detail %></p>
        </div>
        <div class="card-footer text-info border-info">
          <strong><%= Date::MONTHNAMES[expense.month] %></strong>
        </div>
      </div>
    </div>
  <% end %>
</div>
